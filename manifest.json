{
    "name": "Tweet Sentiment",
    "manifest_version": 3,
    "version": "1.0.0",
    "description": "Tweet Sentiment Score using NLP",
    "permissions": ["storage"],
    "host_permissions": ["https://twitter.com/*"],
    "content_scripts": [
        {
            "matches": ["https://twitter.com/*"],
            "js": ["contentScript.js"]
        }
    ],
    "icons": {
        "16": "assets/twitter.png",
        "32": "assets/twitter.png",
        "48": "assets/twitter.png",
        "128": "assets/twitter.png"
    },
    "action": {
        "default_icon": {
            "16": "assets/twitter.png",
            "32": "assets/twitter.png",
            "48": "assets/twitter.png",
            "128": "assets/twitter.png"
        },
        "default_title": "Tweet Sentiment"
    }
}
